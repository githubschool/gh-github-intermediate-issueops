{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist"
  },
  "exclude": [
    "__fixtures__",
    "__mocks__",
    "__tests__",
    "coverage",
    "dist",
    "node_modules",
    "jest.config.ts",
    "rollup.config.ts"
  ],
  "include": ["src"]
}
